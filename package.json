{
    "name": "pkg-name",
    "version": "1.0.0",
    "description": "",
    "type": "module",
    "scripts": {
        "dev": "turbo dev",
        "clean": "pnpm run --parallel clean && rimraf node_modules",
        "build": "turbo build",
        "web:build": "turbo build --filter web",
        "typecheck": "turbo typecheck",
        "lint:all": "turbo lint",
        "studio": "pnpm run --filter @pkg-name/db studio",
        "format": "prettier --write \"**/*.{ts,tsx,mdx}\" --cache",
        "db:build": "turbo build --filter @pkg-name/db",
        "db:local:start": "docker compose -f docker/docker-compose.yml up -d --remove-orphans",
        "db:local:stop": "docker compose -f docker/docker-compose.yml down --remove-orphans",
        "db:local:logs": "docker compose -f docker/docker-compose.yml logs --follow",
        "db:local:reset": "pnpm --filter @pkg-name/db db:full-reset",
        "db:reset": "./scripts/reset-db.sh",
        "deploy:api": "./scripts/deploy.sh pkg-name-api",
        "logs:api": "./scripts/logs.sh pkg-name-api"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@antfu/ni": "^25.0.0",
        "@banjoanton/eslint-config": "^0.2.19",
        "@pkg-name/prettier-config": "workspace:*",
        "dotenv": "^17.2.0",
        "eslint": "^9.31.0",
        "hoks": "^0.1.19",
        "picocolors": "^1.1.1",
        "prettier": "^3.6.2",
        "rimraf": "^6.0.1",
        "tsdown": "^0.12.9",
        "turbo": "^2.5.4",
        "tw-animate-css": "^1.3.6",
        "typescript": "^5.8.3",
        "zx": "^8.7.1"
    },
    "packageManager": "pnpm@8.7.4",
    "prettier": "@pkg-name/prettier-config"
}
